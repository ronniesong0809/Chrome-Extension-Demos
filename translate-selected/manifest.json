{
    "manifest_version": 2,
    "name": "Google Translate",
    "version": "1.0",
    "description": "Translate selected",
    "background": {
        "scripts": [
            "js/script.js"
        ]
    },
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/19.png",
            "38": "images/38.png"
        }
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["js/content_script.js"]
    }],
    "permissions": [
        "contextMenus"
    ]
}
